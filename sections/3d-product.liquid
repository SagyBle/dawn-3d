{% schema %}
  {
    "name": "3D Product Page",
    "settings": [],
    "presets": [
      {
        "name": "3D Product"
      }
    ]
  }
{% endschema %}

<div class="three-d-product">
  <h1>{{ product.title }}</h1>
  {% if product.featured_image %}
    <img
      width="auto"
      height="auto"
      src="{{ product.featured_image | img_url: 'large' }}"
      alt="{{ product.title }}">
  {% else %}
    <p>No image available</p>

  {% endif %}
  <!-- Display 3D Model Placeholder (Metafield) -->
  {% if product.metafields.custom.model3d %}
    <img
      width="auto"
      height="auto"
      src="{{ product.metafields.custom.model3d | img_url: 'large' }}"
      alt="3D Model Placeholder">
  {% else %}
    <p>No 3D model image available</p>
  {% endif %}
</div>

<style>
  .three-d-product {
    text-align: center;
    padding: 20px;
  }
  .three-d-product img {
    max-width: 100%;
    height: auto;
  }
</style>